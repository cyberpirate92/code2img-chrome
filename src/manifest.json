 {
    "name": "Themeify",
    "version": "3.2",
    "description": "Generate beautiful images of code snippets with different color themes directly from webpages",
    "manifest_version": 2,
    "options_page": "preferences.html",
    "permissions": [
        "activeTab",
        "contextMenus",
        "downloads",
        "storage",
        "notifications",
        "http://*/*",
        "https://*/*" 
    ],
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    },
    "background": {
        "scripts": [
            "./js/app.js"
        ]
    }
}
